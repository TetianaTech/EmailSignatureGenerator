<table style="font-family: 'Trebuchet MS', Arial, sans-serif; font-size: 14px; color: #444444;" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding: 10px 0;">
      <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding-bottom: 10px;">
            <img src="{{logoUrl}}" alt="Company Logo" style="width: 120px; height: auto;">
          </td>
        </tr>
        <tr>
          <td style="border-top: 1px solid #dddddd; padding-top: 10px;">
            <table cellpadding="0" cellspacing="0">
              <tr>
                <td style="font-size: 17px; font-weight: bold; color: #2980b9; padding-bottom: 5px;">{{fullName}}</td>
              </tr>
              <tr>
                <td style="padding-bottom: 3px;">
                  <a href="tel:{{phone}}" style="color: #666666; text-decoration: none;">{{phone}}</a>
                </td>
              </tr>
              <tr>
                <td>
                  <a href="mailto:{{email}}" style="color: #666666; text-decoration: none;">{{email}}</a>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>